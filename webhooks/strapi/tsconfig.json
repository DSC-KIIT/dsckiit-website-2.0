{
	"compilerOptions": {
		"outDir": "build",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"typeRoots": ["node_modules/@types"],
		"esModuleInterop": true
	},
	"rootDir": ".",
	"include": ["src/**/**.ts", "tests/**/*.ts", "types/**/*.*"],
	"exclude": ["node_modules"]
}
